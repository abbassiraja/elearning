<style>

ul {
  list-style: none
}
a {
  text-decoration: none
}
.generic-anchor {
	color: $primary-light-blue;
	&:visited {
		color: $primary-light-blue
	}
	&:hover {
		color: $primary-line-color
	}
}
.flex-rw {
  display: flex;
  flex-flow: row wrap;
}
//This main is mostly to push the footer to the bottom and for demo purposes.
main {
  flex: 1 1 auto; //For IE11
  display: flex;
  align-items: center;
  justify-content: center;
  font: 10em "Oswald", sans-serif;
  color: rgb(155,155,155);
  line-height: 1
}
footer {
  background: rgb(55,55,55);
  margin-top: auto;
  width: 100%
}
.foot-list-top {
  width: 33.333%
}
.foot-list-top > li {
  text-align: center;
  padding-bottom: 10px
}
.foot-list-header {
  padding: 10px 0 5px 0;
  color: #fff;
  font: 2.3vw "Oswald", sans-serif
}
.foot-list-anchor {
  font: 1.3em "Open Sans", sans-serif
}
.foot-social-section {
  width: 100%;
  align-items: center;
  justify-content: space-around;
  position: relative;
  margin-top: 5px;
}
.foot-social-section::after {
  content: "";
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 10px;
  border-top: 1px solid $primary-line-color;
  width: calc(100% - 20px)
}
.foot-social-overlap {
  position: relative;
  z-index: 2;
  background: rgb(55,55,55);
  padding: 0 20px
}
.foot-social-connect {
  display: flex;
  align-items: center;
  font: 3.5em "Oswald", sans-serif;
  color: #fff
}
.foot-social-small {
  font-size: 0.6em;
  padding: 0px 20px
}
.foot-social-overlap > a {
  font-size: 3em
}
.foot-social-overlap > a:not(:first-child) {
  margin-left: 0.38em
}
.foot-bottom-section {
  width: 100%;
  padding: 10px;
  border-top: 1px solid $primary-line-color;
  margin-top: 10px
}
.foot-bottom-section > div:first-child {
  margin-right: auto
}
.foot-bottom-wrapper {
  font-size: 1.5em;
  color: #fff
}
.foot-address {
  display: inline;
  font-style: normal
}
@media only screen and (max-width: 768px) {
  .foot-list-header {
    font-size: 2em
  }
  .foot-list-anchor {
    font-size: 1.1em
  }
  .foot-social-connect {
    font-size: 2.5em
  }
  .foot-social-overlap > a {
    font-size: 2.24em
  }
  .foot-bottom-wrapper {
    font-size: 1.3em
  }
}
@media only screen and (max-width: 568px) {

  .foot-list-top {
    width: 100%
  }
  .foot-list-header {
    font-size: 3em;
  }
  .foot-list-anchor {
    font-size: 1.5em
  }
  .foot-social-section {
    justify-content: center
  }
  .foot-social-section::after {
    top: 25%
  }
  .foot-social-connect {
    margin-bottom: 10px;
    padding: 0 10px
  }
  .foot-social-overlap {
    display: flex;
    justify-content: center;
  }
  .foot-social-icons-wrapper {
    width: 100%;
    padding: 0
  }
  .foot-social-overlap > a:not(:first-child) {
    margin-left: 20px;
  }
  .foot-bottom-section {
    padding: 0 5px 10px 5px
  }
  .foot-bottom-wrapper {
    text-align: center;
    width: 100%;
    margin-top: 10px
  }
}
@media only screen and (max-width: 480px) {
  .foot-social-overlap > a {
    margin: auto
  }
  .foot-social-overlap > a:not(:first-child) {
    margin-left: 0;
  }
  .foot-bottom-rights {
    display: block
  }
}
@media only screen and (max-width: 320px) {
  .foot-list-header {
    font-size: 2.2em
  }
  .foot-list-anchor {
    font-size: 1.2em
  }
  .foot-social-connect {
    font-size: 2.4em
  }
  .foot-social-overlap > a {
    font-size: 2.24em
  }
  .foot-bottom-wrapper {
    font-size: 1.3em
  }
}

</style>

