{% extends 'base.html.twig' %}

{% block title %} Cours{% endblock %}

{% block body %}
<style>

.card {
  box-shadow: 0 6px 12px rgba(0,0,0,0.5);
  height: 520px;
}
.btn-primary,
.btn-warning,
.btn-secondary {
   box-shadow: 0 6px 12px rgba(0,0,0,0.25);
}
ul {
  margin: 0;
  padding: 0;
}
ul li {
  list-style-type: none;
  margin-left: 16px;
  margin-bottom: .5rem;
}

</style>
<div class="container mt-5">
{% for item in cour %}
  <div class="row">
    <div class="col-sm-4 col-md-4">
        	<div class="card">
            <div class="card-header">
        		  <h2 class="text-warning">{{item.cour}}{{item.matiere}}</h2>
            </div>
            <div class="card-body">
              <h3 class="label label-info">{{item.niveauscolaire}}</h3>
              <ul>
                <li><i class="fas fa-check"></i>50 utilisateurs </li>
                <li><i class="fas fa-check"></i> Apprendre les bases</li>
                <li><i class="fas fa-check"></i> Apprendre rapidement</li>              
                <li><i class="fas fa-check"></i> Apprendre facilement</li>
              </ul>          
              <p>{{item.description}}</p>
              <hr>
              <h4>{{item.prix}} / month</h4>
              <hr>
              <p><a class="btn btn-warning btn-lg" href="#"><i class="icon-ok"></i> Select plan</a></p>
            </div>
        	</div>
     </div>
		
	</div>
  {% endfor %}
</div>
{% endblock %}
