{% extends 'base.html.twig' %}

{% block title %} Cours{% endblock %}

{% block body %}
<style>
.h{
  margin-top: 30px;
  color: blue;
}
.card {
  box-shadow: 0 6px 12px rgba(0,0,0,0.5);
  height: 520px;
}

.btn-warning
 {
   box-shadow: 0 6px 12px rgba(0,0,0,0.25);
}
ul {
  margin: 0;
  padding: 0;
}
ul li {
  list-style-type: none;
  margin-left: 10px;
  margin-bottom: .5rem;
}

</style>
<div class="container">
  <div class="row">
    <div class="col-lg-12  ">
     <h2 class="h" >Ici vous trouvez nos cours</h2>
    </div>
  </div>
</div>

<div class="container mt-5">

{% for item in cour %}
  <div class="row">
    <div class="col-sm-4 col-md-4">
        	<div class="card">
            <div class="card-header">
        		  <h2 class="text-warning">{{item.nom}}{{item.matiere}}</h2><br>
              <h1>ref: {{item.reference}}</h1>
            </div>
            <div class="card-body">
              <h3 class="label label-info">{{item.niveauscolaire}}</h3>
              <ul>
                <li><i class="fas fa-check"></i>50 utilisateurs </li>
                <li><i class="fas fa-check"></i> Apprendre les bases</li>
                <li><i class="fas fa-check"></i> Apprendre rapidement</li>              
                <li><i class="fas fa-check"></i> Apprendre facilement</li>
              </ul>          
              <p>{{item.description}}</p>
              <hr>
              <h4>{{item.prix}}$ / month</h4>
              <hr>
              <p><a class="btn btn-warning btn-lg" href="{{path('cour_show', {'id':item.id})}}"><i class="icon-ok"></i>detail</a></p>
            </div>
        	</div>
     </div>
		
	</div>
  {% endfor %}
</div>
{% endblock %}
