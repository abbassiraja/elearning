
{% extends 'base.html.twig' %}

{% block title %} Home{% endblock %}

{% block body %}
<style>
/*style pub*/

/*style qui sommes nous*/
section{
  margin-top:50px;
}
.sliderdivitext{
    display: inline-flex;
    background-color: #FBFAE5;
    box-sizing: content-box;
    width: 100%;
    
}

.textoslider{
    font-size: 1rem;
    letter-spacing: 1px;
    color:rgb(52, 73, 3);
    width: 50%;
    height: 600px;
    float: right;
 }

.tituloslider{
    color: #1B5349 ;
    text-align: center;
    font-size: 2rem;
    font-family: 'Bowlby One SC', cursive;
    letter-spacing: 3px;
}

.tituloslider2{
    color: #FBFAE5;
    text-align: center;
    font-size: 45px;
    text-shadow: -3px -3px 5px  #FF7729 ;
    font-family:'Bowlby One SC', cursive; 
    letter-spacing: 4px;
}

p {
    font-family: open sans;
    font-size: 1em;
    color:  #1B5349;
    letter-spacing: 1px;
}

.slider {
	width: 45%;
	margin: auto;
    overflow: hidden;
    box-sizing: content-box;
}

.slider ol {
	display: flex;
	padding: 0;
    width: 400%;
    
	animation: cambio 20s infinite alternate linear;
}

.slider li {
    width: 100%;
    list-style: none;
 
}

.slider img {
    width: 600px;
    height: 300px;
    border-radius: 10px;
}

@keyframes cambio {
	0% {margin-left: 0;}
	20% {margin-left: 0;}
	
	25% {margin-left: -100%;}
	45% {margin-left: -100%;}
	
	50% {margin-left: -200%;}
	70% {margin-left: -200%;}
	
	75% {margin-left: -300%;}
	100% {margin-left: -300%;}
}

@media (max-width:600px){
    .slider-portada{
        width: 100%;
        height: 400px;
    }
}
@media (min-width:600px){
 .slider-portada{
     width: 100%;
     height: 400px;
 }   
}
/* Para dispositivos medianos */
@media(min-width:768px){
.slider-portada {
width: 100%;
height: 420px;
    }
}

@media (min-width:992px){
    .slider-portada{
        width: 100%;
        height: 400px;
    }
}
/* Dispositivos muy grandes */
@media (min-width:1200px){
    .slider-portada{
        width: 100%;
        height: 600px;
    }
}
</style>


  <!--qui sommes nous-->


