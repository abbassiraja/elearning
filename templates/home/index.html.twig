  --content-back:#0d7ff2;
  content:var(--content);
  font-size:15px;
  text-align:Center;
  color:#fff;
  font-weight:600;
  position:absolute;
  top:-50px;
  left:-35px;
  width:110px;height:30px;
  background-color:var(--content-back);
  border-radius:15px 15px 0 0;
  clip-path:polygon(0 0,100% 0,100% 80%,54% 80%,52% 100%,50% 100%,48% 80%,0 80%);
  opacity:0;
  transition:opacity 400ms;
}
