  --content-back:rgba(0,0,0,.9);
}
a:nth-of-type(2)::before {
  
  --content-back:rgba(0,0,0,.9);
} 
a:nth-of-type(3)::before {
 
  --content-back:#0049ff;
}
a:hover::before,
a:focus::before   {
  opacity:1;
  transition:400ms;
}



