{% extends 'base.html.twig' %}

{% block title %}Hello NiveauScolaireController!{% endblock %}

{% block body %}
<style>
h1{
    text-align:center;
}

.card{
    height: 500px;
    width: 400px;
    background: white;
    box-shadow: 0px 1px 10px 1px rgba(0,0,0,0.30) ;
}

.card img{
width: 250px;
height: 160px;
}

.card-title{
font-weight: bold;
margin: 5px 0 0 0 ;
}

.card-description{
font-size: 14px;
color: black;
text-align: justify;
}

.card-title, .card-description, .card-link{
    padding: 0 10px;
}

.card-link a{
    color: rgb(32, 221, 117);
}


/*bgvgy*/
h3{
    color:hsl(212, 77%, 48%)
}
h4{
    text-align: center;
    color: #1cdac0;
    font-weight: bold;
    width: 100%;
    font-size: 24px;
}
p{
    text-align: center;
    color: rgb(7, 6, 6);
    
}
.container{
    display: flex;
    justify-content: space-between;
    gap: 10px;
    flex-wrap: wrap;
    
    
}
.card{
    
    margin-top:50px;
   
}
.first-card{
    width:400px;
    height: 400px;
    background-color:white;
    position: relative;
    text-align:center;
    
}
.first-card img{
    width:100%;
  
}
.back-card{
    position: absolute;
    top: 0;
    left: 0;
    width:400px;
    height: 500px;
    transition: transform .4s ease-in;
    background: linear-gradient(270deg, rgb(255, 25, 195) 0%, rgb(0, 220, 255) 16%, rgb(122, 255, 0) 82%, rgb(0, 254, 207) 100%);
    z-index: -1;
    box-shadow: 0px 0px 112px -41px rgb(255, 25, 195), 0 -10px 26px -5px rgb(0, 220, 255),0px 0px 112px -41px rgb(122, 255, 0) , 0 -10px 26px -5px rgb(0, 254, 207);
}
.thid-card{
    position: absolute;
    top: 0;
    left: 0;
    width:400px;
    height: 500px;
    transition: transform .4s ease-in;
    background: linear-gradient(270deg, rgb(255, 25, 195) 0%, rgb(0, 220, 255) 16%, rgb(122, 255, 0) 82%, rgb(0, 254, 207) 100%);
    z-index: -1;
    box-shadow: 0px 0px 112px -41px rgb(255, 25, 195), 0 -10px 26px -5px rgb(0, 220, 255),0px 0px 112px -41px rgb(122, 255, 0) , 0 -10px 26px -5px rgb(0, 254, 207);
}

.card:hover .back-card{
    transform: rotate(5deg);
}
.card:hover .thid-card{
    transform: rotate(-5deg);
}
button{
    background-color: #000;
    border: 4px solid #181515;
    padding:10px 5px;
    color: #fff;
    text-align: center;
    transition: all 0.4s;
    font-size: 16px;
  
}

.card:hover button{
    background-color: #fff;
    color: #000;
font-weight: bold;
    }

</style>


<body>
<h1>Choisis ton niveau avec notre plateforme d’apprentissage 
et entame l’aventure !</h1>
    <div class="container">
        {% for item in niveauscolaire %}
        <div class="card">
            <div class="first-card"><img src="/images/{{item.image}}" alt="">
                <h4>{{ item.nom }}</h4>
                <h3>par l'école: {{ item.ecole }}</h3>
                <p>{{item.description}}</p>
                <button  > <a href="{{path('matieres')}}">detail</a> </button>
            </div>
            <div class="back-card"></div>
            <div class="thid-card"></div>
            
           
        </div>
       {% endfor %}
    </div>
</body>

{% endblock %}
