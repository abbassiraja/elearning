{% extends 'base.html.twig' %}

{% block title %}Hello NiveauScolaireController!{% endblock %}

{% block body %}
<style>
    


/* https://youtu.be/-89uXuvI8iw */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400&family=Roboto:wght@300&display=swap');


.container{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}

.card{
    width: 330px;
    height: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #161313;
    overflow: hidden;
}

.skewed{
    width: 100%;
    height: 50%;
    margin-top: -50px;
    transform: skewY(8deg);
    overflow: hidden;
}

.skewed img{
    height: 110%;
    transform: skewY(-8deg);
    opacity: 0.6;
}

.content{
    width: 90%;
    height: 45%;
    padding: 10px 20px;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.content h2{
    font-weight: 300;
}

.content h2 p{
    font-size: 15px;
    color: #2980b9;
}

.content #desc{
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    word-spacing: 3px;   
}

.content button{
    color:  #818181;
    font-size: 20px;
    text-transform: uppercase;
    font-weight: 400;
    font-family: 'Montserrat', sans-serif;
    width: 100%;
    padding: 10px;
    margin-top: 10px;
    background: none;
    border: 3px solid #818181;
    transition: all 0.3s ease;
}

.content button:hover{
    color: #E2E2E2;
    border: 3px solid #E2E2E2;
    cursor: pointer;
}



</style>


<div class="container">
<div class="card">
    {% for item in niveauscolaire %}
    <div class="skewed">
        <img src="/images/{{item.image}}" alt="">
    </div>

    <div class="content">
        <h2>{{item.nom}} <p>par l'ecole: {{item.ecole}}</p></h2>
        <p id="desc">{{item.description}} </p>
        <a href="{{path('matieres')}}"><button>Read more</button></a>
    </div>
    {% endfor %}
</div>
</div>
{% endblock %}
